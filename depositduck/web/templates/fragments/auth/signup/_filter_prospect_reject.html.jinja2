{% block signup_form %}
    {% include "/fragments/auth/signup/_filter_prospect_answers.html.jinja2" %}

    <div class="row mt-4">
        <div class="d-none d-md-block col-md-2">
            <p class="h2 float-end">ðŸ‘‰ðŸ‘ˆ</p>
        </div>

        <div class="col-12 col-md-8">
            <h2>It's not you, it's us...</h2>
            <p>We're sorry, DepositDuck is currently only available for:</p>
            <ul>
                <li class="pb-2">
                    People with deposits protected by
                    <strong>TDS.</strong>
                </li>
                {% if days_since_end_date > -180 %}
                    <li>
                        Deposit disputes within the
                        <strong>three-month deadline</strong>
                        set by TDS.
                    </li>
                {% endif %}
                {% if days_since_end_date < -180 %}
                    <li>
                        Tenancies ending within the next
                        <strong>6 months.</strong>
                    </li>
                {% endif %}
            </ul>
            <p>
                If the above applies to friends &amp; family, please let them
                know about DepositDuck!
            </p>

            <p class="text-center">
                <a href="/signup/" class="fs-5 float-end">
                    <i class="bi bi-arrow-counterclockwise pe-1"></i>
                    Start over
                </a>
            </p>
        </div>
    </div>

    {% block unsuitable_prospect_funnel %}
        <div class="row mt-5" id="unsuitable-prospect-funnel-card">
            <div class="d-none d-md-block col-md-2"></div>

            <div class="col-12 col-md-8">
                <div
                    class="card mb-3 {% if has_submitted_funnel_form %}border-success{% endif %}">
                    <div class="card-body">
                        {% if has_submitted_funnel_form %}
                            <div class="row">
                                <div class="col">
                                    <i
                                        class="bi bi-check-circle-fill text-success fs-5"></i>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col">
                                    <h5 class="card-title">
                                        We hope to see you soon
                                    </h5>
                                </div>
                                <p class="card-text">
                                    Thank you for your interest in DepositDuck.
                                    We'll be in touch once we match your needs.
                                </p>
                            </div>
                        {% else %}
                            <p class="card-text">
                                Let us know who your current deposit provider is
                                and we'll get in touch once DepositDuck catches
                                up with your needs.
                            </p>

                            <form
                                hx-post="/auth/unsuitableProspectFunnel/"
                                hx-target="#unsuitable-prospect-funnel-card">
                                <div class="mb-3">
                                    <label
                                        for="email"
                                        class="form-label fw-bold">
                                        Your email:
                                    </label>
                                    <div class="row">
                                        <div class="col-12 col-md-9">
                                            <input
                                                type="email"
                                                id="email"
                                                name="email"
                                                class="form-control"
                                                required />
                                        </div>
                                    </div>
                                </div>
                                <div class="mb-3">
                                    <label
                                        for="provider-name"
                                        class="form-label fw-bold">
                                        Current deposit provider:
                                    </label>
                                    <div class="row">
                                        <div class="col-12 col-md-9">
                                            <input
                                                type="text"
                                                id="provider-name"
                                                name="providerName"
                                                class="form-control"
                                                required />
                                        </div>
                                    </div>
                                </div>
                                <button
                                    type="submit"
                                    class="btn btn-outline-secondary float-end">
                                    Submit
                                </button>
                            </form>
                        {% endif %}
                    </div>
                </div>
            </div>
        </div>
    {% endblock unsuitable_prospect_funnel %}
{% endblock signup_form %}
