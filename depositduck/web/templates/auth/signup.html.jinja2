{% extends "common/_base.html.jinja2" %}

{% block main %}
    <div class="row">
        <div class="col-10 offset-1 col-md-8 offset-md-2">

            <div class="row">
                <div class="col-2 text-center"><i class="bi bi-house-heart text-primary h1"></i></div>
                <div class="col-10"><h1>Sign up</h1></div>
            </div>

            <div class="row mt-2">
                <div class="col-2 text-center"><i class="bi bi-1-circle-fill"></i></div>
                <div class="col-10">Who is your deposit registered with?</div>
            </div>

            <div class="row">
                <div class="col-1 border-end border-1 border-black pb-5"></div>
                <div class="col-1 border-start border-1 border-black pb-5"></div>
                <div class="col-10 py-3 ps-4">

                    <div class="row">
                        <div class="col-12 col-md-6 form-check pb-3 pb-md-0">
                            <input class="form-check-input" type="radio" name="providerChoiceRadio" id="providerTDS">
                            <label class="form-check-label" for="providerTDS" role="button">
                            Tenancy Deposit Scheme (TDS)
                            </label>
                        </div>
                        <div class="col-12 col-md-6 form-check">
                            <input class="form-check-input" type="radio" name="providerChoiceRadio" id="providerOther">
                            <label class="form-check-label" for="providerOther" role="button">
                            A different provider
                            </label>
                        </div>

                </div>
            </div>

            {% block signup_form %}
                <form id="signupForm" class="mt-5" hx-post="/auth/register/">
                    <div class="mb-3">
                        <label for="email" class="form-label fw-bold">
                            Email:
                        </label>
                        <input
                            type="text"
                            id="email"
                            name="email"
                            value="{{ email }}"
                            class="form-control {{ classes_by_id['email'] }}"
                            required />
                        {% if "REGISTER_INVALID_EMAIL" in errors %}
                            <div class="invalid-feedback">
                                Please provide a valid email.
                            </div>
                        {% endif %}
                    </div>
                    <div class="mb-3">
                        <label for="password" class="form-label fw-bold">
                            Password:
                        </label>
                        <input
                            type="password"
                            id="password"
                            name="password"
                            value="{{ password }}"
                            class="form-control {{ classes_by_id['password'] }}"
                            aria-describedby="passwordHelp"
                            required />
                        <div id="passwordHelp" class="form-text">
                            Password must be at least 8 characters long.
                        </div>
                        {% if "REGISTER_INVALID_PASSWORD" in errors %}
                            <div class="invalid-feedback">
                                {% if "PASSWORD_TOO_SHORT" in errors %}
                                    Please make sure your password is at least 8
                                    characters long.
                                {% else %}
                                    Please provide a valid password.
                                {% endif %}
                            </div>
                        {% endif %}
                    </div>
                    <div class="mb-3">
                        <label
                            for="confirm-password"
                            class="form-label fw-bold">
                            Confirm password:
                        </label>
                        <input
                            type="password"
                            id="confirm-password"
                            name="confirm_password"
                            class="form-control {{ classes_by_id['confirm-password'] }}"
                            required />
                        {% if "CONFIRM_PASSWORD_DOES_NOT_MATCH" in errors %}
                            <div class="invalid-feedback">
                                Please provide the same password twice.
                            </div>
                        {% endif %}
                    </div>
                    <button type="submit" class="btn btn-primary float-end">
                        Sign up
                    </button>
                </form>
            {% endblock %}
        </div>
    </div>
{% endblock %}
