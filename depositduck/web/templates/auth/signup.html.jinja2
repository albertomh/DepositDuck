{% extends "common/_base.html.jinja2" %}

{% block main_content %}
    <div class="row">
        <div class="col-10 offset-1 col-md-4 offset-md-4">
            <h1>Sign up</h1>

            {% block signup_form %}
                <form id="signupForm" hx-post="/auth/register/">
                    <div class="mb-3">
                        <label for="username" class="form-label fw-bold">
                            Email:
                        </label>
                        <input
                            type="text"
                            id="username"
                            name="username"
                            class="form-control {% if 'REGISTER_INVALID_EMAIL' in errors %}is-invalid{% endif %}"
                            required />
                        {% if "REGISTER_INVALID_EMAIL" in errors %}
                            <div class="invalid-feedback">
                                Please provide a valid email.
                            </div>
                        {% endif %}
                    </div>
                    <div class="mb-3">
                        <label for="password" class="form-label fw-bold">
                            Password:
                        </label>
                        <input
                            type="password"
                            id="password"
                            name="password"
                            class="form-control {% if 'REGISTER_INVALID_PASSWORD' in errors %}is-invalid{% endif %}"
                            aria-describedby="passwordHelpInline"
                            required />
                        <div id="passwordHelp" class="form-text">
                            Password must be at least 8 characters long.
                        </div>
                        {% if "REGISTER_INVALID_PASSWORD" in errors %}
                            <div class="invalid-feedback">
                                {% if "PASSWORD_TOO_SHORT" in errors %}
                                    Please make sure your password is at least 8
                                    characters long.
                                {% else %}
                                    Please provide a valid password.
                                {% endif %}
                            </div>
                        {% endif %}
                    </div>

                    <!-- TODO: second input for user to confirm password. -->

                    <button type="submit" class="btn btn-primary float-end">
                        Sign up
                    </button>
                </form>
            {% endblock %}
        </div>
    </div>
{% endblock %}
