{% extends "common/_base.html.jinja2" %}

{% block main %}
    <div class="row" id="login-form">
        <div class="col-10 offset-1 col-md-4 offset-md-4">
            <h1>
                <i class="bi bi-door-open text-primary"></i>
                Log in
            </h1>

            {% if prev_url == "/auth/signup/" or "LOGIN_USER_NOT_VERIFIED" in errors %}
                <div
                    class="card border-warning my-3"
                    data-testid="cardPleaseVerify">
                    <div class="card-body">
                        <div class="row">
                            <div class="col">
                                <i
                                    class="bi bi-envelope-exclamation-fill text-warning fs-5"></i>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col">
                                <h5 class="card-title">
                                    Please verify your email
                                </h5>
                            </div>
                            <p class="card-text">
                                Please follow the link in the email we have sent
                                you to verify your account before logging in.
                            </p>
                        </div>
                    </div>
                </div>
            {% endif %}

            {% if prompt_to_reverify %}
                <div
                    class="card border-info my-3"
                    data-testid="card-prompt-reverify">
                    <div class="card-body">
                        <div class="row">
                            <div class="col">
                                <i
                                    class="bi bi-info-circle-fill text-info fs-5"></i>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col">
                                <h5 class="card-title">
                                    Please request a new verification link
                                </h5>
                            </div>
                            <p class="card-text mb-1">
                                That verification link has expired. Click to
                                request a new one:
                            </p>
                            <a
                                href="/auth/request-verification/?email={{ encrypted_email }}">
                                Email me a new link
                            </a>
                        </div>
                    </div>
                </div>
            {% endif %}

            {% if not prompt_to_reverify and prev_url == "/auth/verify/" %}
                <div
                    class="card border-success my-3"
                    data-testid="card-verification-info">
                    <div class="card-body">
                        <div class="row">
                            <div class="col">
                                <i
                                    class="bi bi-check-circle-fill text-success fs-5"></i>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col">
                                <h5 class="card-title">
                                    Thank you for verifying
                                </h5>
                            </div>
                            <p class="card-text">
                                Thank you for verifying your email. You may now
                                log in.
                            </p>
                        </div>
                    </div>
                </div>
            {% endif %}

            {% if prev_url == "existingUser" %}
                <div
                    class="card border-info my-3"
                    data-testid="cardPleaseVerify">
                    <div class="card-body">
                        <div class="row">
                            <div class="col">
                                <i
                                    class="bi bi-person-circle text-info fs-5"></i>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col">
                                <h5 class="card-title">
                                    You already have an account
                                </h5>
                            </div>
                            <p class="card-text">
                                You tried to sign up, but you already have a
                                DepositDuck account.
                            </p>
                        </div>
                    </div>
                </div>
            {% endif %}

            <form
                id="loginForm"
                hx-post="/auth/authenticate/?next={{ next_path }}"
                hx-target="#login-form">
                <div class="mb-3">
                    <label for="username" class="form-label fw-bold">
                        Email:
                    </label>
                    <input
                        type="email"
                        id="username"
                        name="username"
                        value="{{ user_email }}"
                        class="form-control"
                        required
                        {% if prompt_to_reverify %}disabled{% endif %} />
                </div>
                <div class="mb-3">
                    <label for="password" class="form-label fw-bold">
                        Password:
                    </label>
                    <input
                        type="password"
                        id="password"
                        name="password"
                        class="form-control"
                        required
                        {% if prompt_to_reverify %}disabled{% endif %} />
                </div>

                {% if "LOGIN_BAD_CREDENTIALS" in errors %}
                    <div class="card border-warning mb-3">
                        <div class="card-body">
                            <div class="row">
                                <div class="col">
                                    <i
                                        class="bi bi-info-circle-fill text-warning fs-5"></i>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col">
                                    <h5 class="card-title">
                                        Unknown email or password
                                    </h5>
                                </div>
                            </div>
                            <p class="card-text">
                                No user matching the provided email or password.
                                Please try again.
                            </p>
                        </div>
                    </div>
                {% endif %}

                <div class="row">
                    <div class="col-12">
                        <button
                            type="submit"
                            class="btn btn-primary float-end"
                            {% if prompt_to_reverify %}disabled{% endif %}>
                            Log in
                        </button>
                    </div>
                </div>
            </form>

            <hr class="mt-5" />

            <div class="row">
                <div class="col-12 text-center">
                    <p>
                        Don't have an account yet?
                        <a href="/signup/">Sign up</a>
                    </p>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
