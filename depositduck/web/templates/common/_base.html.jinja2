<!doctype html>
<html lang="en" class="h-100">
    <head>
        <meta charset="utf-8" />
        <meta
            name="viewport"
            content="width=device-width, initial-scale=1.0, viewport-fit=cover" />
        <title>DepositDuck</title>
        <!-- TODO: complete -->
        <!-- TODO: SEO meta tags -->
        <meta name="description" content="" />

        <!-- generated with realfavicongenerator.net -->
        <link
            rel="apple-touch-icon"
            sizes="180x180"
            href="{{ url_for('static', path='/favicon/apple-touch-icon.png') }}" />
        <link
            rel="icon"
            type="image/png"
            sizes="32x32"
            href="{{ url_for('static', path='/favicon/favicon-32x32.png') }}" />
        <link
            rel="icon"
            type="image/png"
            sizes="16x16"
            href="{{ url_for('static', path='/favicon/favicon-16x16.png') }}" />
        <link
            rel="manifest"
            href="{{ url_for('static', path='/favicon/site.webmanifest') }}" />
        <link
            rel="mask-icon"
            href="{{ url_for('static', path='/favicon/safari-pinned-tab.svg') }}"
            color="#5bbad5" />
        <link
            rel="shortcut icon"
            href="{{ url_for('static', path='/favicon/favicon.ico') }}" />
        <meta name="apple-mobile-web-app-title" content="DepositDuck" />
        <meta name="application-name" content="DepositDuck" />
        <meta name="msapplication-TileColor" content="#00aba9" />
        <meta
            name="msapplication-config"
            content="{{ url_for('static', path='/favicon/browserconfig.xml') }}" />
        <meta name="theme-color" content="#ffffff" />

        <style>
            @import url("https://fonts.googleapis.com/css2?family=Protest+Strike&display=swap");
        </style>

        <!-- TODO: serve from a bucket instead. -->
        <link
            href="{{ url_for('static', path='/css/bootstrap-5_3_3/bootstrap-5_3_3.min.css') }}"
            rel="stylesheet" />
        <script src="{{ url_for('static', path='/js/bootstrap-5_3_3/bootstrap-5_3_3.bundle.min.js') }}"></script>
        <link
            href="{{ url_for('static', path='/css/bootstrap-icons-1_11_3/bootstrap-icons-1_11_3.min.css') }}"
            rel="stylesheet" />
        <link
            href="{{ url_for('static', path='/css/main.css') }}"
            rel="stylesheet" />

        <script src="{{ url_for('static', path='/js/htmx-1_9_10/htmx-1_9_10.min.js') }}"></script>
    </head>

    <body class="d-flex flex-column h-100">
        {% block navbar %}
            {% include "/common/_navbar.html.jinja2" %}
        {% endblock %}

        <main id="content" class="container">
            {% block main %}
            {% endblock main %}
        </main>

        {% block footer %}
            {% include "/common/_footer.html.jinja2" %}
        {% endblock %}
    </body>
</html>
