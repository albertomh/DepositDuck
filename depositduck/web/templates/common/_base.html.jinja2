<!doctype html>
<html lang="en" class="h-100">
    <head>
        <meta charset="utf-8" />
        <meta
            name="viewport"
            content="width=device-width, initial-scale=1.0, viewport-fit=cover" />
        <title>DepositDuck</title>
        <!-- TODO: complete -->
        <!-- TODO: SEO meta tags -->
        <meta name="description" content="" />

        <!-- generated with realfavicongenerator.net -->
        <link
            rel="apple-touch-icon"
            sizes="180x180"
            href="{{ speculum_source }}/favicon/apple-touch-icon.png" />
        <link
            rel="icon"
            type="image/png"
            sizes="32x32"
            href="{{ speculum_source }}/favicon/favicon-32x32.png" />
        <link
            rel="icon"
            type="image/png"
            sizes="16x16"
            href="{{ speculum_source }}/favicon/favicon-16x16.png" />
        <link
            rel="manifest"
            href="{{ speculum_source }}/favicon/site.webmanifest" />
        <link
            rel="mask-icon"
            href="{{ speculum_source }}/favicon/safari-pinned-tab.svg"
            color="#5bbad5" />
        <link
            rel="shortcut icon"
            href="{{ speculum_source }}/favicon/favicon.ico" />
        <meta name="apple-mobile-web-app-title" content="DepositDuck" />
        <meta name="application-name" content="DepositDuck" />
        <meta name="msapplication-TileColor" content="#00aba9" />
        <meta
            name="msapplication-config"
            content="{{ speculum_source }}/favicon/browserconfig.xml" />
        <meta name="theme-color" content="#ffffff" />

        <style>
            @import url("https://fonts.googleapis.com/css2?family=Protest+Strike&display=swap");
        </style>

        <link href="{{ speculum_source }}/css/main.min.css" rel="stylesheet" />
        <script src="{{ speculum_source }}/js/bootstrap.bundle.min.js"></script>
        <link
            href="{{ speculum_source }}/css/bootstrap-icons.min.css"
            rel="stylesheet" />

        <script src="{{ speculum_source }}/js/htmx.min.js"></script>
    </head>

    <body class="d-flex flex-column h-100">
        {% block navbar %}
            {% include "/common/_navbar.html.jinja2" %}
        {% endblock %}

        <main id="content" class="container mb-3 mb-md-5">
            {% block main %}
            {% endblock main %}
        </main>

        {% block footer %}
            {% include "/common/_footer.html.jinja2" %}
        {% endblock %}
    </body>
</html>
